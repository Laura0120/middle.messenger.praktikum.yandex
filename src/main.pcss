:root {
  --shadow-color: rgb(239 239 239 / 100%);
  --light-gray: rgb(248 248 248 / 100%);
  --light-blue: rgb(228 237 253 / 100%);
  --text-color: #1e1e1e;
  --blue: rgb(51 105 243 / 100%);
  --white: rgb(255 255 255 / 100%);
  --error-color: rgb(255 47 47 / 100%);
  --label-color: rgb(153 153 153 / 100%);

}

.sr-only {
  clip: rect(0 0 0 0);
  clip-path: inset(50%);
  height: 1px;
  overflow: hidden;
  position: absolute;
  white-space: nowrap;
  width: 1px;
}

body {
  color: var(--text-color);
  font-family: Inter, sans-serif;
  height: 100vh;
  margin: 0 auto;
  padding: 20px
}

.page {
  align-items: center;
  display: flex;
  flex-direction: column;
  gap: 20px;
  height: 100%
}

.nav {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.main {
  flex-grow: 1;
  width: 100%;
}

.form_block {
  border-radius: 12px;
  box-shadow: 0 0 12px var(--shadow-color);
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 135px;
  padding: 50px 30px 30px;
  width: 340px;
}

.form_wrapper {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form_title {
  font-size: 20px;
  font-weight: 500;
  line-height: 20px;
  text-align: center;
}

.button {
  background-color: var(--blue);
  border: none;
  border-radius: 8px;
  color: var(--white);
  cursor: pointer;
  padding: 14px 24px;
  width: 100%;
}

.input_wrapper {
  position: relative;
  width: 100%;
}

.input {
  border-bottom: 1px solid var(--blue);
  border-left: none;
  border-right: none;
  border-top: none;
  box-sizing: border-box;
  padding: 20px 0 8px;
  width: 100%;
  min-width: 280px;
}

.input:focus {
  outline: none;
}

.input_error {
  color: var(--error-color);
  display: none;
  font-size: 8px;
  margin-top: 8px;
}

.invalid ~ .input_error {
  display: block;
}

.label {
  color: var(--label-color);
  display: none;
  font-size: 9px;
  left: 0;
  position: absolute;
  top: 0
}

.filled + .label {
  display: block;
}

.link {
  color: var(--blue);
  font-size: 11px;
  text-decoration: none;
}

.form_block .link {
  text-align: center
}

.chats_wrapper {
  display: flex;
  height: 100%;
  width: 100%;
}

.chat-list_wrapper {
  border-right: 1px solid var(--shadow-color);
  margin-right: 25px;
  max-width: 25%;
  min-width: 25%;
  padding: 20px 10px;
}

.chat-list_header {
  border-bottom: 1px solid var(--shadow-color);
  box-sizing: border-box;
  height: 67px;
  padding: 10px 0;
}

.chat_item {
  border-bottom: 1px solid var(--shadow-color);
  box-sizing: border-box;
  display: flex;
  height: 67px;
  padding: 10px 0;
}

.chat_wrapper, .chat-feed_wrapper {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.chat_avatar {
  background-color: var(--shadow-color);
  border-radius: 50%;
  height: 47px;
  margin-right: 8px;
  min-width: 47px;
}

.chat_header, .chat_body, .chat-feed_header, .chat-feed_contact {
  display: flex;
  gap: 10px;
  justify-content: space-between;
}

.chat-feed_main {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  gap: 10px;
}

.chat-feed_date {
  color: var(--label-color);
  font-size: 12px;
  font-weight: 500;
  line-height: 12px;
  text-align: center;

}

.chat-feed_sending .form_wrapper {
  flex-direction: row;
}

.chat_unread-messages {
  align-items: center;
  background-color: var(--blue);
  border-radius: 50%;
  color: var(--white);
  display: flex;
  font-size: 11px;
  font-weight: 500;
  height: 20px;
  justify-content: center;
  line-height: 12px;
  min-width: 20px;
}

.chat_contact-name {
  font-size: 13px;
  font-weight: 600;
  line-height: 13px;
  margin-bottom: 5px;
}

.chat_message-date {
  color: var(--label-color);
  font-size: 9px;
  font-weight: 500;
  line-height: 13px;
  text-align: right;
}

.chat_message {
  -webkit-box-orient: vertical;
  color: var(--label-color);
  display: -webkit-box;
  font-size: 12px;
  font-weight: 500;
  -webkit-line-clamp: 2;
  line-height: 15px;
  margin: 0;
  overflow: hidden;
}

.chat-feed_message {
  border-radius: 10px;
  box-sizing: border-box;
  font-size: 12px;
  font-weight: 500;
  line-height: 15px;
  max-width: 400px;
  min-width: 115px;
  padding: 10px;
}

.chat-feed_message--incoming {
  align-self: self-start;
  background-color: var(--light-gray);
}

.chat-feed_message--outgoing {
  align-self: self-end;
  background-color: var(--light-blue)
}

.chat-feed_message_time {
  color: var(--label-color);
  font-size: 9px;
  font-weight: 500;
  line-height: 9px;
  text-align: right;
}


.avatar-container {
  display: flex;
  justify-content: center;

  .avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 130px;
    height: 130px;
    border: none;
    background-color: var( --shadow-color);
    border-radius: 50%;
    cursor: pointer;

    .image {
      width: 130px;
      height: 130px;
      border-radius: 50%;
    }

    &::after {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 130px;
      height: 130px;
      content: 'Поменять аватар';
      position: absolute;
      color: white;
      font-size: 13px;
      background-color: #0009;
      border-radius: 50%;
      opacity: 0;
      transition: opacity 0.3s;
    }

    &:hover::after {
      opacity: 1;
      transition: opacity 0.3s;
    }
  }
}

.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: #0000007F;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 340px;
  height: 257px;
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 3rem 1.5rem;
  border-radius: 12px;
  box-shadow: 0 0 6px 0 #00000023;

  h2 {
    font-size: 15px;
    text-align: center;
    flex-grow: 1;
  }

  .field-container {
    margin-bottom: 2rem;

    .input-container {
      input {
        width: 100%;
      }
    }
  }
}

.modal-change-avatar-content {
  width: 340px;
  height: 257px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 3rem 1.5rem;
  border-radius: 12px;
  box-shadow: 0 0 6px 0 #00000023;

  h2 {
    font-size: 15px;
    text-align: center;
  }
}

